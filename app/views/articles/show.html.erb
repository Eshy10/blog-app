<div class = "container text-center">
<h1><%= @article.title %></h1>
<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
<p>
<% if @article.image.exists? %>
      <%= image_tag @article.image.url(:medium) %><br/>
  <% end %>
</p>
<p><%= @article.body %></p>
<h3>Comments (<%= @article.comments.size %>)</h3>
<%= render partial: 'comments/form' %>
<%= render partial: 'articles/comment', collection: @article.comments%>
<div class = "d-flex justify-content-center">
<%= link_to "<< Back to Articles List", articles_path, class: 'btn btn-primary mr-3'%>
<%=button_to "Delete Article", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete the article?"}, class: 'btn btn-danger mr-3' %>
<%= link_to "Edit Article", edit_article_path(@article), class: 'btn btn-success'%>
</div>
</div>
